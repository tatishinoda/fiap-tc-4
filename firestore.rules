// Regras de segurança Firestore - ByteBank Mobile
// Para aplicar essas regras: Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para usuários - apenas usuários autenticados podem acessar seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para transações - cada usuário acessa apenas suas próprias transações
    match /transactions/{transactionId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Regra para investimentos - cada usuário acessa apenas seus próprios investimentos
    match /investments/{investmentId} {
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Bloquear acesso a qualquer outro documento
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

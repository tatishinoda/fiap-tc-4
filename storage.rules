// Regras de segurança Firebase Storage - ByteBank Mobile
// Para aplicar essas regras: Firebase Console > Storage > Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regra para comprovantes de transação
    match /transaction-receipts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        resource.size < 10 * 1024 * 1024; // Limite de 10MB
    }
    
    // Bloquear acesso a qualquer outro arquivo
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';

// Firebase Storage Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Regra para comprovantes de recibos - cada usuário acessa apenas seus próprios recibos
    match /receipts/{userId}/{allPaths=**} {
      // Permitir leitura apenas para o próprio usuário
      allow read: if request.auth != null && request.auth.uid == userId;

      // Permitir criação/atualização apenas para o próprio usuário com validações
      allow create, update: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024 && // Limite de 10MB
        request.resource.contentType.matches('image/.*'); // Apenas imagens
      
      // Permitir deleção apenas para o próprio usuário
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Bloquear acesso a qualquer outro arquivo
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}